{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".git",
			".next",
			".vercel",
			".env",
			"node_modules",
			"build",
			"dist",
			"public",
			"pnpm-lock.yaml"
		],
		"include": [
			"src/**/*.tsx",
			"src/**/*.ts",
			"src/**/*.js",
			"src/**/*.jsx"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
